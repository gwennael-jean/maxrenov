{% block media_row %}
    {{ form_label(form) }}
    {{ form_widget(form) }}
{% endblock %}

{% block media_widget %}
    <div class="d-flex">
        <div class="flex-shrink-0">
            {% set src = value is not null
                ? asset('uploads/' ~ media.context[value.context].path ~ '/' ~ value.path)
                : 'https://dummyimage.com/150x150/cfcfcf/fff.jpg' %}

            <img src="{{ src }}" alt="media">
        </div>
        <div class="flex-grow-1 ms-3">
            {{ form_widget(form.binaryContent) }}
            {{ form_errors(form.binaryContent) }}
            {{ form_help(form) }}
            {{ form_row(form.remove) }}
        </div>
    </div>
{% endblock %}
