<div class="card">
    <div class="card-header">
        {% trans %}Server Informations{% endtrans %}
    </div>
    <div class="card-body">
        <table class="table table-borderless">
            <tbody>
            <tr>
                <td class="sonata-ba-list-label">
                    <i class="fa fa-tasks fa-fw"></i>
                    Espace Disque
                </td>
                <td class="text-right">
                    {{ diskAvailableSpace }} / {{ diskTotalSpace }}
                </td>
            </tr>
            <tr>
                <td class="sonata-ba-list-label">
                    <i class="fa fa-tasks fa-fw"></i>
                    Espace Disque (en %)
                </td>
                <td class="text-right">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped {{ progressbarBackgroundColor }}"
                             role="progressbar"
                             style="width: {{ percentAvailableSpace }}%;"
                             aria-valuenow="{{ percentAvailableSpace | round(1) }}"
                             aria-valuemin="0"
                             aria-valuemax="100">{{ percentAvailableSpace | round(1) }}%
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="sonata-ba-list-label">
                    <i class="fa fa-database fa-fw"></i>
                    Espace base de donn√©es
                </td>
                <td class="text-right">
                    {{ databaseUsedSpace }}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
