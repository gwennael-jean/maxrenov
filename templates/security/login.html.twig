{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {{ form_row(form) }}
        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                Connexion
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
